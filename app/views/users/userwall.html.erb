<h1><%= @user.name%> <%= @user.lastname%></h1>
<div>
    <%= link_to 'Home', '/', method: 'get' %>
</div>
<div>
    <%= link_to 'Users', '/users', method: 'get' %>
</div>
<% if (current_user.email == @user.email) then %>
<div>
    <%= form_tag("/post", method: "post") do %>
    <%= label_tag(:post, "Write a post...") %>
    <%= text_field_tag(:post) %>
    <%= submit_tag("Post") %>
    <% end %>
</div>
<% end %>


<ul style="list-style-type:none">
<% @posts.each do |post| %>
    <li>
        <%= post.content %>
        <%= link_to 'Delete Post', "/posts/#{post.id}", method: 'delete' %>
        <div>
            <%= form_tag("/comment", method: "post") do %>
            <%= label_tag(:comment, "Write a comment...") %>
            <%= text_field_tag(:comment) %>
             <%= hidden_field_tag(:post_id, post.id) %>
            <%= submit_tag("Comment") %>
            <% end %>

            <% post.comments.each do |comment| %>
            <li>
                <%= comment.content %>
                <%= link_to 'Delete Comment', "/comments/#{comment.id}", method: 'delete' %>
            </li>
            <% end %>
        </div>
    </li>
<% end %>
</ul>